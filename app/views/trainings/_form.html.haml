-# frozen_string_literal: true
= simple_form_for(@training) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :start_date_enrollment
    = f.input :end_date_enrollment
    = f.input :start_training_date
    = f.input :end_training_date
    = f.association :seedbed

  .form-actions
    = f.button :submit
