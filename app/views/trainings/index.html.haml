%h1 Listing trainings

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Start date enrollment
      %th End date enrollment
      %th Start training date
      %th End training date
      %th Seedbed
      %th
      %th
      %th

  %tbody
    - @trainings.each do |training|
      %tr
        %td= training.name
        %td= training.description
        %td= training.start_date_enrollment
        %td= training.end_date_enrollment
        %td= training.start_training_date
        %td= training.end_training_date
        %td= training.seedbed
        %td= link_to 'Show', training
        %td= link_to 'Edit', edit_training_path(training)
        %td= link_to 'Destroy', training, :method => :delete, :data => { :confirm => 'Are you sure?' }

